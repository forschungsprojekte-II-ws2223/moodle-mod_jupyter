<body>
    <div align="center">
        <iframe id="iframe" src={{login}}></iframe>
        <div id="description-wrapper">
            <div id="info">&#9432;</div>
            <p id="description">
                {{{description}}}
            </p>
            <button id="iframe-reset-button" data-action="mod_jupyter/reset-notebook_button">
                {{resetbuttontext}}
                <img id="reset-icon" src="images/reset_icon.png" alt="reset icon">
            </button>
        </div>
        <div>
            <p>{{{submitbuttoninfo}}}</p>
            <button data-action="mod_jupyter/submit-notebook_button"
                class="btn btn-primary">{{submitbuttontext}}</button>
        </div>
    </div>
</body>

<style>
    iframe {
        display: block;
        border: none;
        height: 75vh;
        width: 100%;
        margin-bottom: 2rem;
    }

    #description-wrapper {
        margin: 5px 0 5px;
        display: flex;
        outline: 1px solid #aaa;
        border-radius: 3px;
        justify-content: space-evenly;
        align-items: center;
        flex-direction: row;
    }

    #description-wrapper>* {
        margin: 0.5rem 1rem;
    }

    #iframe-reset-button {
        position: relative;
        padding-left: 2.5rem;
        padding-right: 1rem;
        padding-top: 0.6rem;
        padding-bottom: 0.6rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
        background: #1abc9c;
        border-bottom: 1px solid #12ab8d;
        box-shadow: inset 0 -2px #12ab8d;
    }

    #iframe-reset-button:active {
        top: 1px;
        box-shadow: none;
    }

    #iframe-reset-button>div {
        position: absolute;
        font-size: 1.3rem;
        font-weight: bold;
        transition: .2s ease-in-out;
    }

    #reset-icon {
        position: absolute;
        left: 1rem;
        width: 1rem;
        height: 1rem;
        transition: all 0.4s ease-in-out;
    }

    #iframe-reset-button:hover #reset-icon,
    #iframe-reset-button:focus #reset-icon {
        transform: rotate(360deg) scale(1.2);
    }

    #info {
        color: #fa9f47;
        font-weight: bold;
        font-size: 2rem;
    }

    #description {
        flex-basis: 100%;
        font-size: 0.8rem;
        text-align: left;
    }

    @media only screen and (max-width:1240px) {

        #description-wrapper {
            flex-direction: column;
        }

        #iframe-reset-button:before {
            opacity: 1;
        }

        #description {
            text-align: center;
        }
    }
</style>
